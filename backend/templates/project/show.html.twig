{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">back to list</a>

    {{ include('project/_delete_form.html.twig') }}

    <h4>Milestones</h4>
    <ul>
        {% for milestone in project.milestones %}
            <li><a href="{{ path('app_project_milestone_show', {'id': milestone.id}) }}">{{ milestone.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
